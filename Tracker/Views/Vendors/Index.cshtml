@using Tracker.Models;
@{
  Layout = "_Layout";
}

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>You don't have any vendors, Pierre!</h3>
}

@foreach (Vendor vendor in Model)
{
    <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
}

<a href="/vendors/new">Register a new vendor</a>
<p><a href='/'>Back home</a></p>
